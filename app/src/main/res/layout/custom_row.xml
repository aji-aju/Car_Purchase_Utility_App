<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="?attr/listPreferredItemPaddingLeft">

    <TextView
        android:id="@+id/customerIdHolder"
        android:layout_width="35dp"
        android:layout_height="69dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:fontFamily="@font/alegreya_sc_black_italic"
        android:text="TextView"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/customerNameHolder"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:fontFamily="@font/alike_angular"
        android:text="TextView"
        android:textColor="#3F51B5"
        android:textSize="23sp" />

    <Button
        android:id="@+id/getCarDetailsButton"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#EDD7D7"
        android:onClick="getDetails"
        android:shadowColor="#E8BFBF"
        android:text="Purchased Cars"
        android:textColor="#D54444" />
</LinearLayout>